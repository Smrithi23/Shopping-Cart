<html>

<head>
    <title>Amazon</title>
    <link rel="icon" href="/uploads/amazonicon.jpg">
    <meta charset="utf-8">
</head>
<style>
    body {
        position: relative;
        margin: 0;
        padding: 0;
        background-color: #EAEDED;
        color: #232f3e;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 20;
    }

    #Amazon {
        position: absolute;
        width: 1828px;
        height: 100px;
        background-color: #232f3e;
        padding-top: 3px;
        padding-left: 25px;
    }

    #searchItem {
        position: absolute;
        top: 12px;
        left: 180px;
        border: 0;
        outline: 0;
        background-color: #ffffff;
        height: 33px;
        width: 1250px;
        font-size: 20px;
        padding: 5px;
        border-radius: 5px;
    }

    #search {
        position: absolute;
        top: 12px;
        left: 1397px;
        border-left: 7px solid #ffa600;
        border-top: 5px solid #ffa600;
        border-bottom: 0;
        border-right: 0;
        outline: 0;
        background-color: #ffa600;
        background-image: url('../uploads/search.png');
        background-size: 70%;
        background-repeat: no-repeat;
        height: 33px;
        width: 40px;
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
    }

    #admin {
        position: absolute;
        top: 14px;
        right: 50px;
        background-color: transparent;
        border: 0;
        outline: 0;
        color: #ffffff;
        font-size: 18;
    }

    #signIn {
        position: absolute;
        top: 14px;
        right: 115px;
        background-color: transparent;
        border: 0;
        outline: 0;
        color: #ffffff;
        font-size: 18;
    }

    #signUp {
        position: absolute;
        top: 14px;
        right: 180px;
        background-color: transparent;
        border: 0;
        outline: 0;
        color: #ffffff;
        font-size: 18;
    }

    table {
        position: absolute;
        top: 130px;
        left: 330px;
        background-color: #ffffff;
        padding: 10px;
        font-size: 20px;
    }

    tr {
        position: relative;
        height: 270px;
        width: 1000px;
    }

    .info {
        width: 900px;
        padding: 20px;
    }

    .row {
        height: 3px;
    }
    
    .line1 {
        height: 2px;
        background-color: #cacaca;
    }

    .line2 {
        height: 2px;
        background-color: #cacaca;
    }

    #buyNow {
        position: absolute;
        top: 110px;
        right: 50px;
        border: none;
        background-color: #59b81a;
        color: #000000;
        height: 50px;
        width: 150px;
        margin: 16px;
        font-size: 20;
        border-radius: 4px;
    }

    #addToCart {
        position: absolute;
        top: 180px;
        right: 50px;
        border: none;
        background-color: #ffae00;
        color: #000000;
        height: 50px;
        width: 150px;
        margin: 16px;
        font-size: 20;
        border-radius: 4px;
    }

    .title {
        position: absolute;
        top: 40px;
        left: 250px;
        font-size: 25px;
    }

    .description {
        position: absolute;
        top: 100px;
        left: 250px;
        font-size: 20px;
    }

    .price {
        position: absolute;
        top: 130px;
        left: 250px;
        font-size: 20px;
    }

    #message {
        position: absolute;
        top: 300px;
        left: 850px;
        font-size: 25px;
        font-weight: bold;
        color: #232f3e;
    }
</style>

<body>
    <div id="Amazon">
        <img src="/uploads/amazon.png" height="65px" width="105px">

        <form method="post" action="/searchWithoutLoggingIn">
            <input id="searchItem" type="text" placeholder="Search items" name="search">
            <input id="search" type="submit" value="">
        </form>

        <form method="get" action="/login">
            <input id="signIn" type="submit" value="Sign in">
        </form>
        <form method="get" action="/register">
            <input id="signUp" type="submit" value="Sign up  |">
        </form>
    </div>
    <div id="message">
        {{message}}
    </div>
    <table>

        {{#each items}}
        <tr>
            <td>
                <img src="{{this.image}}" height="200px" width="200px">
            </td>
            <td class="info">
                <div class="title">{{this.name}}</div>
                <div class="description">{{this.description}}</div><br>
                <div class="price">Rs {{this.price}}</div><br>
                <form method="get" action="/login">
                    <input id="addToCart" type="submit" value="Buy">
                </form>
            </td>
        </tr>
        <tr class="row">
            <td>
                <div class="line1"></div>
            </td>
            <td>
                <div class="line2"></div>
            </td>
        </tr>
        {{/each}}

    </table>
</body>

</html>